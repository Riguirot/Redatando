generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model Content {
  id        String   @id @default(uuid())
  title     String
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CreditTransaction {
  id          String   @id @default(uuid())
  userId      String
  type        String
  amount      Int
  description String?
  expiresAt   DateTime?
  createdAt   DateTime @default(now())

  @@index([userId])
}

model Essay {
  id        String   @id @default(uuid())
  studentId String
  theme     String
  fileUrl   String
  status    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([studentId])
}

